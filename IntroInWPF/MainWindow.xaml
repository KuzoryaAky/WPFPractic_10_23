                    <TabItem Header="Помощь"/>
                    <Separator/>
                    <TabItem Header="О программе"/>
                </MenuItem>
            </Menu>
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem DockPanel.Dock="Right">
